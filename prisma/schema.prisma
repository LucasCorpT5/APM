datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String @id @default(uuid())
  name         String
  github_id    Int
  avatar_url   String
  login        String

  @@map("users")
  messages Message[]
}

model Message {
  id            String @id @default(uuid())
  text          String
  created_At    DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])

  user_id String
  @@map("messages")
}